{
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "types": ["node", "swagger-jsdoc", "swagger-ui-express"],
      "resolveJsonModule": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }